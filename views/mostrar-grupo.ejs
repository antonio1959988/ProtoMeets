<div class="contenedor">
    <h1><%= nombrePagina %></h1>
    <div class="informacion-grupo">
        <div class="imagen">
            <% if(grupo.imagen){ %>
                <img src="/uploads/grupos/<%= grupo.imagen %>" alt="">
            <% } %>
        </div>

        <div class="texto">
            <%- grupo.descripcion %>
            
            <% if(grupo.url){ %>
                <a href="<%- grupo.url %>" target="_blank" class="url">Visita nuestro sitio web</a>
            <% } %>

            <% if(eventos.length > 0){ %>
                <h2>Pr√≥ximos Eventos</h2>
                <ul class="lista-meetis">
                    <% eventos.forEach(evento => { %>
                        <li>
                            <div class="texto">
                                <a href="/evento/<%= evento.slug %>">
                                    <h3><%= evento.titulo %></h3>

                                    <% moment.locale('es') %>
                                    <% const fecha = evento.fecha + ' ' + evento.hora %>
                                    <p class="fecha"><%= moment(fecha).format('LLLL') %> horas</p>
                                </a>
                            </div>
                        </li>

                    <% }) %>
                </ul>
            <% } %>
        </div>
    </div>
</div>