<main class="contenedor panel-administracion">

    <h1>
        <%= nombrePagina %>
    </h1>

    <div class="contenedor-botones">
        <a href="/nuevo-grupo" class="btn btn-amarillo">NUEVO GRUPO</a>
        <a href="/nuevo-evento" class="btn btn-azul">NUEVO EVENTO</a>
        <a href="/editar-perfil" class="btn btn-rosa">EDITAR PERFIL</a>
        <a href="/cambiar-password" class="btn btn-verde">CAMBIAR PASSWORD</a>
        <a href="/imagen-perfil" class="btn btn-amarillo">IMAGEN PERFIL</a>
    </div>

    <div class="seccion-admin">
        <h2>PRÓXIMOS EVENTOS</h2>
        <% if(eventos.length > 0) { %>
        <ul>
            <% eventos.forEach(evento => {%>
            <li>
                <div class="informacion-admin">
                    <% moment.locale('es') %>
                    <% const fecha = evento.fecha + ' ' +  evento.hora%>
                    <p class="fecha">
                        <%= moment(fecha).format('LLLL') %> horas
                    </p>
                    <a href="/evento/<%= evento.slug %>" target="_blank">
                        <h3><%= evento.titulo %></h3>
                    </a>
                    <small><%= evento.interesados.length %> Interesados</small>
                </div>
                <div class="acciones contenedor-botones">
                    <a href="/editar-evento/<%= evento.id %>" class="btn btn-verde">Editar</a>
                    <a href="/asistentes-evento/<%= evento.id %>" class="btn btn-azul2">Asistentes</a>
                    <a href="/eliminar-evento/<%= evento.id %>" class="btn btn-rojo">Eliminar</a>
                </div>
            </li>
            <% }) %>
        </ul>
        <% } else { %>
            <p>Aún no tienes eventos creados</p>
        <% } %>
    </div>

    <div class="seccion-admin">
        <h2>Tus Grupos</h2>
        <% if(grupos.length) {%>
            <ul>
                <% grupos.forEach(grupo=> { %>
                    <li>
                        <div class="informacion-admin">
                            <h3>
                                <%= grupo.nombre %>
                            </h3>
                        </div>
                        <div class="acciones contenedor-botones">
                            <a href="/editar-grupo/<%= grupo.id %>" class="btn btn-verde">Editar</a>
                            <a href="/imagen-grupo/<%= grupo.id %>" class="btn btn-azul2">Imagen</a>
                            <a href="/eliminar-grupo/<%= grupo.id %>" class="btn btn-rojo">Eliminar</a>
                        </div>
                    </li>
                    <% })%>
            </ul>
        <% } else{ %>
            <p>No tienes un grupo creado</p>
        <% } %>
    </div>

    <div class="seccion-admin">
        <h2>EVENTOS ANTERIORES</h2>
        <% if(anteriores.length > 0) { %>
        <ul>
            <% anteriores.forEach(anterior => {%>
            <li>
                <div class="informacion-admin">
                    <% moment.locale('es') %>
                    <% const fecha = anterior.fecha + ' ' +  anterior.hora%>
                    <p class="fecha">
                        <%= moment(fecha).format('LLLL') %> horas
                    </p>
                    <h3><%= anterior.titulo %></h3>
                    <small><%= anterior.interesados.length %> Interesados</small>
                </div>
                <div class="acciones contenedor-botones">
                    <a href="/editar-evento/<%= anterior.id %>" class="btn btn-verde">Editar</a>
                    <a href="/asistentes-evento/<%= anterior.id %>" class="btn btn-azul2">Asistentes</a>
                    <a href="/eliminar-evento/<%= anterior.id %>" class="btn btn-rojo">Eliminar</a>
                </div>
            </li>
            <% }) %>
        </ul>
        <% } else { %>
            <p>No hay eventos anteriores</p>
        <% } %>
    </div>

</main>