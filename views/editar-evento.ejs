<main class="contenedor contenedor-formularios">
    <h1><%- nombrePagina %></h1>
    <form class="default-form" method="POST">
        <legend>Sobre el Evento</legend>
        <div class="campo">
            <label>Grupo</label>
            <select name="grupoId">
                    <option value="" disabled selected>-- Selecciona Grupo --</option>
                    <% if(grupos.length > 0) {%>
                        
                        <% grupos.forEach(grupo =>{ %>
                            <option <%= (eventos.grupoId === grupo.id) ? 'selected' : '' %> value="<%= grupo.id %>"><%= grupo.nombre %></option>
                        <% }) %>
                    <% } %>
            </select>
        </div>
        <div class="campo">
            <label>Titulo</label>
            <input type="text" name="titulo" placeholder="Titulo Evento" value="<%= eventos.titulo %>">
        </div>
        <div class="campo">
            <label>Invitado</label>
            <input type="text" name="invitado" placeholder="Nombre Invitado o Ponente (si aplica)" value="<%= eventos.invitado %>">
        </div>
        <div class="columnas-2 grid">
            <div class="campo">
                <label>Fecha</label>
                <input type="date" name="fecha" placeholder="Fecha Evento" value="<%= eventos.fecha %>">
            </div>
            <div class="campo">
                <label>Hora</label>
                <input type="time" name="hora" placeholder="Hora Evento" value="<%= eventos.hora %>">
            </div>
        </div>
        <div class="campo">
            <label>Cupo</label>
            <input type="number" min="1" name="cupo" placeholder="Cupo Evento (si aplica)" value="<%= eventos.cupo %>">
        </div>
        <div class="campo descripcion">
            <label>Descripción</label>
            <div class="contenedor-editor">
                <input type="hidden" id="x" name="descripcion" value="<%= eventos.descripcion %>">
                <trix-editor input="x"></trix-editor>
            </div>
        </div>

        <legend>Ubicación Evento</legend>
        <div class="campo buscador">
            <label>Coloca la Dirección del Evento</label>
            <div class="contenedor-input">
                <input type="text" id="formbuscador" placeholder="Ubicación">
                <small>El asistente colocará una dirección estimada</small>
            </div>
        </div>

        <div class="campo mapa">
            <div id="mapa" style="height: 400px;
            width: 100%;"></div>
            
        </div>
        <p class="informacion">Mueve el pin hacia el punto exacto en caso de ser necesario</p>

        <p class="informacion">Confirma que los siguientes campos sean correctos:</p>
        <div class="campo">
            <label>Dirección</label>
            <input type="text" id="direccion" name="direccion" placeholder="Dirección" value="<%= eventos.direccion %>">
        </div>
        <div class="campo">
            <label>Ciudad</label>
            <input type="text" id="ciudad" name="ciudad" placeholder="Ciudad" value="<%= eventos.ciudad %>">
        </div>
        <div class="campo">
            <label>Estado</label>
            <input type="text" id="estado" name="estado" placeholder="Estado" value="<%= eventos.estado %>">
        </div>
        <div class="campo">
            <label>País</label>
            <input type="text" id="pais" name="pais" placeholder="País" value="<%= eventos.pais %>">
        </div>

        <input type="hidden" id="lat" name="lat" value="<%= eventos.ubicacion.coordinates[0] %>">
        <input type="hidden" id="lng" name="lng" value="<%= eventos.ubicacion.coordinates[1] %>">
  
        <div class="campo enviar">
            <input type="submit" class="btn btn-rosa" value="Guardar Cambios">
        </div>
    </form>
</main>