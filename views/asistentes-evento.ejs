<main class="contenedor asistentes">
    <h1><%= nombrePagina %></h1>

    <% if(asistentes.length > 0){ %>
    <ul class="listado-asistentes">
        <% asistentes.forEach(asistente => { %>
            <li>
                <div class="imagen">
                    <% if(asistente.imagen){ %>
                        <img src="/uploads/perfiles/<%= asistente.imagen %>" alt="">
                    <% } else { %>
                        <img src="/uploads/perfiles/user.jpeg" alt="">
                    <% } %>
                </div>
                <div class="texto">
                    <%= asistente.nombre %>
                </div>
            </li>
        <% }) %>
    </ul>

    <% } else { %>
        <center>
        <p class="no-asistentes">
            No hay asistentes aÃºn
        </p>
    </center>
    <% } %>
</main>